<div class="container mt-4">
  <div class="card" style="width: 18rem;">
    <%= image_tag current_user.user_face.medium.url, alt: "user_face" %>
    <div class="card-header">
      <%= current_user.duty + " " + current_user.name %>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= current_user.email %></li>
      <li class="list-group-item"><%= current_user.nickname %></li>
    </ul>
    <div class="card-body">
      <%= link_to fa_icon("pencil", text: "Edit Profile"), edit_user_registration_path, class: "btn btn-primary" %>
      <%= link_to fa_icon("plane", text: "Logout"), destroy_user_session_path, method: :delete,class: "btn btn-danger" %>
    </div>
  </div>
</div>